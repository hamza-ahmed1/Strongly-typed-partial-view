<div class="card" style="width: 18rem;">
    <img src="@(Model.ProductImage)" asp-append-version="true"  class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.ProductName</h5>
        <p class="card-text">@Model.ProductDescription</p>
        <a href="#" class="btn btn-primary">View Details</a>
    </div>
</div>